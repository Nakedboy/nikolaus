\section{...für Gleichungen}
\subsection{Einzeiler}
\begin{equation}
 \Delta=\rho\cdot\nabla \label{equ:T}
\end{equation}

\subsection{Mehrzeiler}
\begin{eqnarray}
 g\cdot\Delta=g\cdot\rho\cdot\nabla\\
 G = B
\end{eqnarray}

oder

\begin{align}\label{equ:pegew}
\begin{split}
 g\cdot\Delta &=g\cdot\rho\cdot\nabla\\
 G &= B
\end{split}
\end{align}
\clearpage
