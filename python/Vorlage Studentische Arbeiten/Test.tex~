\section{...für Gleichungen}
\subsection{Einzeiler}
\begin{equation}
 T(t)= \frac{T_A(t)+T_F(t)}{2} \label{equ:T}
\end{equation}

\subsection{Mehrzeiler}
\begin{eqnarray}
 Sup_v(t)=(1+f_u(t))\cdot v(t)\\
 Inf_v(t)=(1-f_u(t))\cdot v(t)
\end{eqnarray}

oder

\begin{align}\label{equ:pegew}
\begin{split}
 P_{e_{gew}}= &\, \textit{comp\_BZ\,1}\texttt{.getResults().getDataAt(12,0)}\cdot v_{BZ\,1}\cdot w_{BZ\,1} \\
            &+\textit{comp\_BZ\,2}\texttt{.getResults().getDataAt(12,0)}\cdot v_{BZ\,2}\cdot w_{BZ\,2}\\
             &+\textit{comp\_BZ\,3}\texttt{.getResults().getDataAt(12,0)}\cdot v_{BZ\,3}\cdot w_{BZ\,3}\\
             &+\textit{comp\_BZ\,4}\texttt{.getResults().getDataAt(12,0)}\cdot v_{BZ\,4}\cdot w_{BZ\,4}
\end{split}
\end{align}
